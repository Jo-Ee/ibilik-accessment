<h4>Bookings:</h4>

<% @bookings.each do |b| %>
	<p>&nbsp &nbsp <%= b.message%></p>
	<% user = User.find(b.user_id) %>
	<p>&nbsp &nbsp &nbsp Posted by: <%= user.username%></p>

<p>***********************************</p>
<% end %>







